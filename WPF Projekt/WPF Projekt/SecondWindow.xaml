            Marine Weg 6b
            54321 Berlin
        </TextBlock>


        <Label x:Name="programmName" Content="Name des Programmes:" Foreground="White" HorizontalAlignment="Left" Margin="67,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameProg" HorizontalAlignment="Left" Height="24" Margin="260,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221"/>

        <Label x:Name="howMuchProcent" Content="Bestanden mit (%)" Foreground="White" HorizontalAlignment="Left" Margin="67,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="passWith" HorizontalAlignment="Left" Height="24" Margin="260,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>

        <Label x:Name="delHistory" Content="Historie löschen" Foreground="White" HorizontalAlignment="Left" Margin="67,185,0,0" VerticalAlignment="Top"/>
        <Button x:Name="deleteHistory" Content="Löschen" HorizontalAlignment="Left" Margin="260,185,0,0" VerticalAlignment="Top" Width="75" Click="deleteHistory_Click"/>




